{
  "env": {
    "commonjs": true,
    "node": true,
    "browser": true,
    "es6": true
  },

  "extends": ["plugin:prettier/recommended"],

  "plugins": ["prettier"],

  "parser": "babel-eslint",

  "parserOptions": {
    "sourceType": "module",
    "allowImportExportEverywhere": true,
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 2018
  },

  "rules": {
    "prettier/prettier": [
      "error",
      {
        "endOfLine": "auto"
      }
    ]
  }
}
